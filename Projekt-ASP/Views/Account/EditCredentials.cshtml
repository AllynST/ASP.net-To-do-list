@model Projekt_ASP.Models.User
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container" style="margin-top:50px;">
    <div class="row">
        <div class="col-lg-4">
            <img src="~/Image/User_icon_2.png" class="img-fluid">
        </div>
        <div class="col-lg-8 pt-4 pt-lg-0 content">
            <h3 class="opacityTextHeader">User data</h3>
            <div class="row">

                <div class="col-lg-6">
                    <form asp-action="ChangeCredentials" asp-controller="Account" method="post">
                        <table class="table">

                            <input hidden asp-for="User_ID" />
                            <tr>
                                <td><strong class="opacityTextHeader">User name:</strong></td>
                                <td>
                                    <div class="form-group">
                                        <div><span asp-validation-for="UserName" class="text-danger"></span></div>
                                        <input asp-for="UserName" class="form-control" />
                                    </div>
                                </td>

                            </tr>
                            <tr>
                                <td><strong  class="opacityTextHeader">First name:</strong></td>
                                <td>
                                    <div class="form-group">

                                        <div><span asp-validation-for="Name" class="text-danger"></span></div>
                                        <input asp-for="Name" class="form-control" />
                                    </div>
                                </td>

                            </tr>
                            <tr>
                                <td><strong class="opacityTextHeader">Surname:</strong></td>
                                <td>
                                    <div class="form-group">

                                        <div><span asp-validation-for="Surname" class="text-danger"></span></div>
                                        <input asp-for="Surname" class="form-control" />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td><strong class="opacityTextHeader">Email adress:</strong></td>
                                <td class="w-100">
                                    <div class="form-group">

                                        <div><span asp-validation-for="Email" class="text-danger"></span></div>
                                        <input asp-for="Email" class="form-control" />
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <input class="btn btn-primary h-50" value="Change" type="submit" />
                                </td>
                                <td>
                                    <a class="btn btn-danger nav-link h-50" asp-area="" asp-controller="Account" asp-action="YourAccount">Abort</a>
                                </td>
                            </tr>
                           

                        </table>
                    </form>
                </div>
            </div>

        </div>
    </div>

</div>
